<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OperacaoActivity">

    <Button
        android:id="@+id/btReceber"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/receber"
        app:layout_constraintBottom_toTopOf="@+id/btEntregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btFecharCaixa"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/fechar_caixa"
        app:layout_constraintEnd_toStartOf="@+id/btSair"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <Button
        android:id="@+id/btSair"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/sair"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btFecharCaixa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btFecharCaixa"
        app:layout_constraintTop_toTopOf="@+id/btFecharCaixa" />

    <Button
        android:id="@+id/btEntregar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/entregar"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="@+id/btReceber"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btReceber"
        app:layout_constraintTop_toBottomOf="@+id/btReceber" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="186dp" />

</androidx.constraintlayout.widget.ConstraintLayout>